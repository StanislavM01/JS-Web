<main>
    <h1>Attach a new accessory</h1>
    <div class="form">
        <h2>{{name}}</h2>
        <img class="cube" src={{upload}}>
        {{#if unUsedAccessory}}
        <form action="/cats/{{_id}}/accessory/add" method="POST">
            <label for="accessory">Accessories</label>
            <select id="accessory" name="accessory" />
            {{#each unUsedAccessory}}
            <option value={{_id}}>{{name}}</option>
            {{/each}}

            </select>
            <input type="submit" value="Attach">
        </form>
        {{else}}
        <h3 class="italic">This cat has all available accessories.</h3>
        {{/if}}
        <a class="btn" href="/cats/{{_id}}/accessory/details">Back</a>
    </div>
</main>