<main>

    <section id="catalog">
        <h1>All posts</h1>
        <div class="band">



            {{#each allPosts}}
            {{> 'singlePostCard'}}
            {{else}}

            <!-- If there are still no posts for wildlife in the database display: -->
            <div class="no-posts">
                <div class="no-posts-img">
                    <img src="/static/img/animal.jpg" alt="image_nature_3">
                </div>
                <p class="no-offer">There are no posts yet...</p>
            </div>

            {{/each}}


            <!-- If there are posts for wildlife in the database display each of them -->
            <div class="flip flip-vertical">
                <div class="front">
                    <img src="/static/img/pexels-photo-540518.png" alt="image_nature_1">
                    <h1 class="text-shadow">Keyword: Mountain</h1>
                </div>
                <div class="back">
                    <h2>Title</h2>
                    <p>Description: A mountain is an elevated portion of the Earth's crust, generally with steep sides
                        that show significant exposed bedrock.</p>
                    <a href="#" class="details">Details</a>
                </div>
            </div>




        </div>
    </section>
</main>